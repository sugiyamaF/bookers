<div class="notice">
    <%= flash[:notice] %>
</div>

<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a><%= link_to 'Show', book_path(book.id) %></a></td>
        <td><a><%= link_to 'Edit', edit_book_path(book.id) %></a></td>
        <td><a><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, 'data-confirm' => "Are you sure?" %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>


  <h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>
    <label>Body</label>
    <%= f.text_area :body %>


    <div class="actions">
      <input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">
    </div>
  <% end %>
</body>